#include <iostream>
#include <fstream>
#include <string>
#include <iomanip>
#include <sstream>
#include <vector>


 
void RetrieveDataLevel(const string & NameLevel, vector <vector <unsigned>> & Grid, unsigned & KNbCandies, unsigned & Coup)
{
    ifstream ifs;
    bool check=true;
    while(check)
    {
        string FichierSource=NameLevel;
        unsigned Cpt(3);
        while(Cpt != 0)
        {
            ifs.open(FichierSource);
            if(!ifs.fail()) break;
            --Cpt;
        }
        if(Cpt==0)
        {
            cout << "3 Ã©checs d'ouverture de fichier en lecture" << endl;
            break;
        }
        unsigned Instance = 0;
        int cpt = -1;
        while(!ifsScore.eof())
        {
            string Str;
            getline(ifs,Str);

            if(Instance == 0)
            {
                int Size = stoi(Str);
                Grid.resize(Size);
                for(unsigned i = 0; i < Grid.size() ; ++i)
                {
                    Grid[i].resize(Size);
                }
                Instance = 1;
            }
            else if(Instance == 1)
            {
                unsigned KNbCandies = stoi(Str);
                Instance = 2;
            }
            else if(Instance == 2)
            {
                unsigned Coup = stoi(Str);
                Instance = 3;
            }
            else
            {
                ++cpt;
                for(unsigned i = 0; i < Str.size() ; ++i)
                {

                    if(Str[i] == '1')
                    {
                        Grid[cpt][i] = 12;
                    }
                    else
                    {
                        Grid[cpt][i]=0;
                    }
                }
            }

        }
        check=false;
    }
}
